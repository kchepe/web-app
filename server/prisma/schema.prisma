generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         String       @id
  firstname  String
  lastname   String
  email      String       @unique
  Credential Credential?
  createdAt  DateTime      @default(now())
}

model Credential {
  id         String    @id
  password   String
  employeeId String    @unique
  employee   Employee? @relation(fields: [employeeId], references: [id])
  createdAt  DateTime   @default(now())
}